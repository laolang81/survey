<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.2//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>

	<!-- 基于字段的验证 -->
	<!-- 设置短路验证其，当前验证不同,不执行下一个转换器验证下一个short-circuit=true -->
	<field name="name">
		<field-validator type="requiredstring">
			<message>名称必须</message>
		</field-validator>
	</field>

	<field name="email">
		<field-validator type="requiredstring" short-circuit="true">
			<message>email必须</message>
		</field-validator>
		<field-validator type="email">
			<message>非有效email</message>
		</field-validator>
	</field>

	<field name="password">

		<field-validator type="stringlength">
			<param name="trim">true</param>
			<param name="minLength">6</param>
			<param name="maxLength">20</param>
			<message>密码不能小于6位,不能有空格</message>
		</field-validator>

	</field>

	<validator type="expression">
		<param name="expression"><![CDATA[password!=null || password_c==password]]></param>
		<message>两次密码不一致</message>
	</validator>



</validators>