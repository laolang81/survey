<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/admin">
	<!-- 此处用来定义不需要过滤的页面 -->
	<excludes>
		<pattern>/index.jsp*</pattern>
		<pattern>/admin/login*</pattern>
	</excludes>

	<!-- 用来定义装饰器要过滤的页面 -->
	<decorator name="main" page="main.jsp">
		<pattern>/admin/*</pattern>
	</decorator>
</decorators>